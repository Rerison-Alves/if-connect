<resources>

    <style name="Widget.Theme.ProjetoPAGE.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="titulo">

        <item name="android:textSize">
            64sp
        </item>

        <item name="android:textColor">
            #000000
        </item>

    </style>

    <style name="textonormal">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textColor">
            @color/black
        </item>
        <item name="fontFamily">
            @font/imprima
        </item>
    </style>

    <style name="titulo_bold">

        <item name="android:textSize">20sp</item>

        <item name="android:textColor">#000000</item>

    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_shape</item>
        <item name="behavior_peekHeight">300dp</item>
    </style>

    <style name="dialogFragment" >
        <item name="android:background">@drawable/littleborder</item>
    </style>
</resources>